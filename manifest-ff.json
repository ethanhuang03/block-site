{
  "manifest_version": 3,
  "name": "Smart Block Site",
  "description": "Earn points through productive sites in order to view unproductive sites.",
  "version": "2.0.0",
  "icons": {
    "128": "images/icon.png"
  },
  "action": {
    "default_icon": {
      "128": "images/icon.png"
    },
    "default_popup": "src/ui/options.html"
  },
  "options_ui": {
    "page": "src/ui/options.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "webRequest",
    "idle"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["src/background.js"]
  }
}