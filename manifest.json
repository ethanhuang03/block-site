{
  "manifest_version": 3,
  "name": "Smart Block Site",
  "description": "Earn points through productive sites in order to view unproductive sites.",
  "version": "0.0.3",
  "icons": {
    "128": "images/icon.png"
  },
  "action": {
    "default_icon": {
      "128": "images/icon.png"
    },
    "default_popup": "options.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  }
}